<div class="pt-3 pb-3">
  <h1 class="text-center">Groups</h1>
</div>

<div class="d-flex justify-content-start pt-3 pb-3">
  <%=link_to 'Create new group', new_group_path, :class => "btn btn-primary " %>
</div>


<table class="table table-bordered ">
  <thead>
   <tr>
     <th scope="col">Group</th>
     <th scope="col">Full Name</th>
     <th scope="col">Role</th>
     <th scope="col">Edit</th>
     <th scope="col">Delete</th>
   </tr>
 </thead>
 <tbody>
   <% @groups.each do |group| %>
     <% organizer = group.roles.Organizer %>
   <tr>
     <td><%= link_to group.name, group_path(group.id) %></td>
     <% organizer = group.roles.Organizer %>
     <% if organizer %>
      <% organizer.each do |role| %>
        <td><%= role.user.full_name%> </td>
        <td><%= role.role %></td>
      <% end %>
    <% else %>
     <% end %>

     <td><%= link_to 'Edit', edit_group_path(group) %></td>
     <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>

</table>

<div class="d-flex justify-content-sm-end pt-5 pb-5 pr-5">
  <!-- <h4>Import Groups</h4> -->
<%= form_tag import_groups_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import CSV" %>
<% end %>

</div>
